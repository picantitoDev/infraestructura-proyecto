#!/usr/sbin/nft -f
flush ruleset

table inet filter {

  chain input {
    type filter hook input priority 0;

    iif "lo" accept
    ct state established,related accept

    ip saddr 192.168.0.250 tcp dport 22 accept
    ip saddr 192.168.0.250 tcp dport 443 accept
    ip saddr 10.0.0.0/8 accept

    tcp dport 80 accept
    tcp dport 443 accept
    drop
  }

  chain forward {
    type filter hook forward priority 0;
    drop
  }

  chain output {
    type filter hook output priority 0;
    accept
  }
}
